---
const { openText, closeText } = Astro.props;
---

<button id="toggleButton">
    { !openText ? <slot name="openButton" /> : openText }
</button>

<dialog id="modal">
    <slot />
    <form method="dialog">
        <button>
            {closeText}
        </button>
    </form>
</dialog>

<script>
    const button = document.getElementById("toggleButton");
    const dialog = document.getElementById("modal") as HTMLDialogElement;

    button?.addEventListener("click", () => {
        dialog.showModal();
    });
</script>

<style>
    dialog {
        background: rgba(0, 0, 0, 0.2);
        border: 1px solid #74148f;
        border-radius: 8px;
        padding: 20px;
        max-width: 320px;
        width: auto;
        backdrop-filter: blur(5px);
    }

    button {
        background-color: #590072;
        color: white;
        font-size: 22px;
        width: 180px;
        border: none;
        padding: 10px 0;
        border-radius: 5px;
        box-shadow: 0 15px 20px rgba(0, 0, 0, 0.4);
        cursor: pointer;

        margin-left: 50%;
        transform: translateX(-50%);
    }

    button:hover {
        background-color: #74148f;
    }
</style>
